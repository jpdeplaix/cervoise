defns
  Jtype :: '' ::=

  defn
    G |- t : T :: :: GtT :: T_ {{ com Typing rules }} by

    x : T isin G
    ------------ :: Var
    G |- x : T

    G, x : T1 |- t : T2    &    G |- T1 : *
    --------------------------------------- :: Abs
    G |- (\(x : T1) => t) : T1 -> T2

    a notin G    &    G, a : K |- t : T
    ---------------------------------------- :: TyAbs
    G |- (\{a : K} => t) : forall (a : K), T

    G, c : T1 ~ T2 |- t : T3    &    G |- T1 : K    &    G |- T2 : K
    ---------------------------------------------------------------- :: CAbs
    G |- (\{c : T1 ~ T2} => t) : {T1 ~ T2} -> T3

    G |- t1 : T2 -> T1    &    T2 == T2'    &    G |- t2 : T2'
    ---------------------------------------------------------- :: App
    G |- t1 t2 : T1

    G |- t : forall (a : K), T2    &    G |- T1 : K    &    [a |-> T1] T2 |> T2'
    ---------------------------------------------------------------------------- :: TyApp
    G |- t @[T1] : T2'

    G |- t : {T1 ~ T2} -> T3    &    G |- C : T1' ~ T2'    &    T1 == T1'    &    T2 == T2'
    --------------------------------------------------------------------------------------- :: CApp
    G |- t ~[C] : T3

    G |- C : T1 ~ T2    &    G |- t : T1'    &    T1 == T1'
    ------------------------------------------------------- :: Coerce
    G |- (t :> C) : T2

defns
  JCoerce :: '' ::=

  defn
    G |- C : T1 ~ T2 :: :: GC :: C_ {{ com Coercion typing }} by

    c : T1 ~ T2 isin G
    ------------------ :: Var
    G |- c : T1 ~ T2


    ------------------- :: Refl
    G |- refl T : T ~ T

    G |- C : T2 ~ T1
    -------------------- :: Sym
    G |- sym C : T1 ~ T2

    G |- C1 : T1 ~ T2    &    T2 == T2'    &    G |- C2 : T2' ~ T3
    -------------------------------------------------------------- :: Comp
    G |- C1 . C2 : T1 ~ T3

    G |- C1 : T1 ~ T1'    &    G |- C2 : T2 ~ T2'    &    G |- C3 : T3 ~ T3'
    >> >> >> >> >> >> >> >> G |- {T1 ~ T2} -> T3 : *
    ------------------------------------------------------------------------ :: CArrow
    G |- ({C1 ~ C2} -> C3) : ({T1 ~ T2} -> T3) ~ ({T1' ~ T2'} -> T3')

    a notin G    &    G, a : K |- C : T1 ~ T2
    ---------------------------------------------------- :: Abs
    G |- (\(a : K), C) : (\(a : K), T1) ~ (\(a : K), T2)

    a notin G    &    G, a : K |- C : T1 ~ T2    &    G |- forall (a : K), T1 : *
    ----------------------------------------------------------------------------- :: Forall
    G |- (forall (a : K), C) : (forall (a : K), T1) ~ (forall (a : K), T2)

    G |- C1 : T1 ~ T1'    &    G |- C2 : T2 ~ T2'    &    G |- T1 T2 : K
    -------------------------------------------------------------------- :: App
    G |- C1 C2 : T1 T2 ~ T1' T2'

    G |- T1 : K    &    G |- C : (forall (a1 : K), T2) ~ (forall (a2 : K), T3)
    >> >> >> [a1 |-> T1] T2 |> T2'    &    [a2 |-> T1] T3 |> T3'
    -------------------------------------------------------------------------- :: Inst
    G |- C @ T1 : T2' ~ T3'

    i isin {1, 2}    &    G |- C : T1 T2 ~ T1' T2'
    ---------------------------------------------- :: ElimApp
    G |- elim C : Ti ~ Ti'

    i isin {1, 2, 3}    &    G |- C : ({T1 ~ T2} -> T3) ~ ({T1' ~ T2'} -> T3')
    -------------------------------------------------------------------------- :: ElimCArrow
    G |- elim C : Ti ~ Ti'

defns
  Jkind :: '' ::=

  defn
    G |- T : K :: :: GT :: K_ {{ com Kinding rules }} by

    a : K isin G
    ------------ :: Var
    G |- a : K

    a notin G    &    G, a : K1 |- T : K2
    ------------------------------------- :: Abs
    G |- (\(a : K1), T) : K1 -> K2

    G |- T1 : K2 -> K1    &    G |- T2 : K2
    --------------------------------------- :: App
    G |- T1 T2 : K1

    G |- T1 : K    &    G |- T2 : K    &    G |- T3 : *
    --------------------------------------------------- :: CArrow
    G |- ({T1 ~ T2} -> T3) : *

    a notin G    &    G, a : K |- T : *
    ----------------------------------- :: Forall
    G |- (forall (a : K), T) : *

defns
  Jequiv :: '' ::=

  defn
    T1 == T2 :: :: ST :: EQ_ {{ com Type equivalence }} by


    ------ :: Refl
    T == T

    T2 == T1
    -------- :: Sym
    T1 == T2

    T1 == T2    &    T2 == T3
    ------------------------- :: Trans
    T1 == T3


    ------ :: Var
    a == a

    T1 == T1'    &    T2 == T2'    &    T3 == T3'
    --------------------------------------------- :: CArrow
    ({T1 ~ T2} -> T3) == ({T1' ~ T2'} -> T3')

    T1 == T2
    -------------------------------------------- :: Forall
    (forall (a : K), T1) == (forall (a : K), T2)

    T1 == T2
    -------------------------------- :: Abs
    (\(a : K), T1) == (\(a : K), T2)

    T1 == T1'    &    T2 == T2'
    --------------------------- :: App
    T1 T2 == T1' T2'

    [a |-> T2] T1 |> T1'
    ------------------------ :: AppAbs
    (\(a : K), T1) T2 == T1'

defns
  Jop :: '' ::=

  defn
    t --> t' ::  :: reduce :: E_ {{ com Operational semantics }} by

    t2 --> t2'
    ---------------- :: App1
    t1 t2 --> t1 t2'

    t --> t'
    ------------ :: App2
    t v --> t' v

    [x |-> v] t |> t'
    ------------------------ :: AppAbs
    (\(x : T) => t) v --> t'

    t --> t'
    ------------------------------------ :: TAbs
    (\{a : K} => t) --> (\{a : K} => t')

    t --> t'
    ------------------ :: TApp
    t @[T] --> t' @[T]

    [a |-> T] v |> v'
    --------------------------- :: TAppAbs
    (\{a : K} => v) @[T] --> v'

    t --> t'
    ------------------------------------------------ :: CAbs
    (\{c : T1 ~ T2} => t) --> (\{c : T1 ~ T2} => t')

    t --> t'
    ------------------ :: CApp
    t ~[C] --> t' ~[C]

    [c |-> C] t |> t'
    --------------------------------- :: CAppAbs
    (\{c : T1 ~ T2} => t) ~[C] --> t'

    t --> t'
    --------------- :: Coerce
    (t :> C) --> t'

defns
  JSubstT :: '' ::=

  defn
    [ a |-> T1 ] T2 |> T3 :: :: SubstT :: SubstT_ {{ com Type substitution }} by


    ---------------- :: Var1
    [a |-> T] a |> T

    a1 /= a2
    ------------------- :: Var2
    [a1 |-> T] a2 |> a2

    [a |-> T1] T2 |> T2'    &    [a |-> T1] T3 |> T3'    &    [a |-> T1] T4 |> T4'
    ------------------------------------------------------------------------------ :: CArrow
    [a |-> T1] ({T2 ~ T3} -> T4) |> ({T2' ~ T3'} -> T4')

    a1 /= a2    &    [a1 |-> T1] T2 |> T2'
    ----------------------------------------------- :: Abs
    [a1 |-> T1] (\(a2 : K), T2) |> (\(a2 : K), T2')

    a1 /= a2    &    [a1 |-> T1] T2 |> T2'
    ----------------------------------------------------------- :: Forall
    [a1 |-> T1] (forall (a2 : K), T2) |> (forall (a2 : K), T2')

    [a |-> T1] T2 |> T2'    &    [a |-> T1] T3 |> T3'
    ------------------------------------------------- :: App
    [a |-> T1] (T2 T3) |> T2' T3'

defns
  JSubst :: '' ::=

  defn
    [ x |-> v ] t1 |> t2 :: :: Subst :: Subst_ {{ com substitution }} by


    ---------------- :: Var1
    [x |-> v] x |> v

    x1 /= x2
    ------------------- :: Var2
    [x1 |-> v] x2 |> x2


    -------------------------------------------- :: Abs1
    [x |-> v] (\(x : T) => t) |> (\(x : T) => t)

    x1 /= x2    &    [x1 |-> v] t1 |> t2
    ------------------------------------------------- :: Abs2
    [x1 |-> v] (\(x2 : T) => t1) |> (\(x2 : T) => t2)

    [x |-> v] t1 |> t2
    ---------------------------------------------- :: TAbs
    [x |-> v] (\{a : K} => t1) |> (\{a : K} => t2)

    [x |-> v] t1 |> t2
    ---------------------------------------------------------- :: CAbs
    [x |-> v] (\{c : T1 ~ T2} => t1) |> (\{c : T1 ~ T2} => t2)

    [x |-> v] t1 |> t1'    &    [x |-> v] t2 |> t2'
    ----------------------------------------------- :: App
    [x |-> v] (t1 t2) |> t1' t2'

    [x |-> v] t1 |> t2
    -------------------------------- :: TApp
    [x |-> v] (t1 @[T]) |> (t2 @[T])

    [x |-> v] t1 |> t2
    -------------------------------- :: CApp
    [x |-> v] (t1 ~[C]) |> (t2 ~[C])

    [x |-> v] t1 |> t2
    -------------------------------- :: Coerce
    [x |-> v] (t1 :> C) |> (t2 :> C)

defns
  JTtSubst :: '' ::=

  defn
    [ a |-> T ] t1 |> t2 :: :: TtSubst :: TtSubst_ {{ com substitution of type variable in term }} by


    ---------------- :: Var
    [a |-> T] x |> x

    [a |-> T1] T2 |> T2'    &    [a |-> T1] t1 |> t2
    -------------------------------------------------- :: Abs
    [a |-> T1] (\(x : T2) => t1) |> (\(x : T2') => t2)

    a1 /= a2    &    [a1 |-> T] t1 |> t2
    ------------------------------------------------- :: TAbs
    [a1 |-> T] (\{a2 : K} => t1) |> (\{a2 : K} => t2)

    [a |-> T1] T2 |> T2'    &    [a |-> T1] T3 |> T3'    &    [a |-> T1] t1 |> t2
    ----------------------------------------------------------------------------- :: CAbs
    [a |-> T1] (\{c : T2 ~ T3} => t1) |> (\{c : T2' ~ T3'} => t2)

    [a |-> T] t1 |> t1'    &    [a |-> T] t2 |> t2'
    ----------------------------------------------- :: App
    [a |-> T] (t1 t2) |> t1' t2'

    [a |-> T1] t1 |> t2    &    [a |-> T1] T2 |> T2'
    ------------------------------------------------ :: TApp
    [a |-> T1] (t1 @[T2]) |> (t2 @[T2'])

    [a |-> T] t1 |> t2    &    [a |-> T] C1 |> C2
    --------------------------------------------- :: CApp
    [a |-> T] (t1 ~[C1]) |> (t2 ~[C2])

    [a |-> T] t1 |> t2    &    [a |-> T] C1 |> C2
    --------------------------------------------- :: Coerce
    [a |-> T] (t1 :> C1) |> (t2 :> C2)

defns
  JaCSubst :: '' ::=

  defn
    [ a |-> T ] C1 |> C2 :: :: aCSubst :: aCSubst_ {{ com substitution of type variable in coercion term }} by


    ---------------- :: Var
    [a |-> T] c |> c

    [a |-> T1] T2 |> T2'
    -------------------------------- :: Refl
    [a |-> T1] (refl T2) |> refl T2'

    [a |-> T] C1 |> C2
    ---------------------------- :: Sym
    [a |-> T] (sym C1) |> sym C2

    [a |-> T] C1 |> C1'    &    [a |-> T] C2 |> C2'
    ----------------------------------------------- :: Comp
    [a |-> T] (C1 . C2) |> C1' . C2'

    [a |-> T] C1 |> C1'    &    [a |-> T] C2 |> C2'    &    [a |-> T] C3 |> C3'
    --------------------------------------------------------------------------- :: CArrow
    [a |-> T] ({C1 ~ C2} -> C3) |> ({C1' ~ C2'} -> C3')

    a1 /= a2    &    [a1 |-> T] C1 |> C2
    --------------------------------------------- :: Abs
    [a1 |-> T] (\(a2 : K), C1) |> (\(a2 : K), C2)

    a1 /= a2    &    [a1 |-> T] C1 |> C2
    --------------------------------------------------------- :: Forall
    [a1 |-> T] (forall (a2 : K), C1) |> (forall (a2 : K), C2)

    [a |-> T] C1 |> C1'    &    [a |-> T] C2 |> C2'
    ----------------------------------------------- :: App
    [a |-> T] (C1 C2) |> C1' C2'

    [a |-> T1] C1 |> C2
    [a |-> T1] T2 |> T3
    ------------------------------- :: Inst
    [a |-> T1] (C1 @ T2) |> C2 @ T3

    [a |-> T] C1 |> C2
    ------------------------------ :: Elim
    [a |-> T] (elim C1) |> elim C2

defns
  JCtSubst :: '' ::=

